@{
    ViewData["Title"] = "Emitir Segunda Via";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="fw-bold mb-4">Emitir Segunda Via de Boleto</h2>

            <p class="text-muted">Insira seus dados abaixo para localizar sua cobrança e emitir a segunda via do boleto.</p>

            <form method="post" action="/Boleto/EmitirSegundaVia">
                <div class="mb-3">
                    <label for="cpfCnpj" class="form-label">CPF ou CNPJ</label>
                    <input type="text" class="form-control" id="cpfCnpj" name="cpfCnpj" placeholder="Digite seu CPF ou CNPJ" required>
                </div>

                <div class="mb-3">
                    <label for="codigoCliente" class="form-label">Código do Cliente</label>
                    <input type="text" class="form-control" id="codigoCliente" name="codigoCliente" placeholder="Informe seu código de cliente" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Buscar Boletos</button>
            </form>

            <div class="mt-5">
                <h5 class="fw-semibold">Não encontrou o boleto?</h5>
                <p class="text-muted">Entre em contato pelo nosso <a href="home/FaleConosco">Fale Conosco</a> e nossa equipe ajudará você.</p>
            </div>
        </div>
    </div>
</div>
