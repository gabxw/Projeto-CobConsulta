@using System.Text.Json

@model List<WebApplication1.Models.Divida>
@{
    ViewData["Title"] = "Minhas Dívidas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto py-8">
    <h2 class="text-3xl font-bold mb-6">Minhas Dívidas</h2>

    <div class="flex flex-wrap gap-4 mb-4">
        <div>
            <label for="statusFilter" class="block text-sm font-medium text-gray-700">Status</label>
            <select id="statusFilter" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
                <option value="">Todos</option>
                <option value="Pendente">Pendente</option>
                <option value="Pago">Pago</option>
                <option value="Atrasado">Atrasado</option>
            </select>
        </div>
        <div>
            <label for="dateFilter" class="block text-sm font-medium text-gray-700">Data de Vencimento</label>
            <input type="date" id="dateFilter" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
        </div>
    </div>

    <table class="min-w-full bg-white rounded shadow-md overflow-hidden">
        <thead>
            <tr class="bg-gray-200 text-left text-gray-700 text-sm uppercase">
                <th class="px-4 py-2">Título</th>
                <th class="px-4 py-2">Descrição</th>
                <th class="px-4 py-2">Empresa</th>
                <th class="px-4 py-2">Vencimento</th>
                <th class="px-4 py-2">Pagamento</th>
                <th class="px-4 py-2">Status</th>
                <th class="px-4 py-2">Ações</th>
            </tr>
        </thead>
        <tbody id="dividasBody">
            @foreach (var item in Model)
            {
                var statusColor = item.Status switch
                {
                    "Pago" => "bg-green-100 text-green-800",
                    "Atrasado" => "bg-red-100 text-red-800",
                    _ => "bg-yellow-100 text-yellow-800"
                };
                <tr class="border-t">
                    <td class="px-4 py-2">@item.Titulo</td>
                    <td class="px-4 py-2">@item.Descricao</td>
                    <td class="px-4 py-2">@item.Empresa.Nome</td>
                    <td class="px-4 py-2">@item.DataVencimento?.ToString("dd/MM/yyyy")</td>
                    <td class="px-4 py-2">@item.DataPagamento?.ToString("dd/MM/yyyy")</td>
                    <td class="px-4 py-2">
                        <span class="px-2 py-1 rounded-full text-xs font-semibold @statusColor">@item.Status</span>
                    </td>
                    <td class="px-4 py-2 space-x-2">
                        <button onclick="showDetails(@item.Id)"
                            class="bg-blue-500 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm">
                            Detalhes
                        </button>

                        @if (item.Status != "Pago")
                        {
                            <button onclick="showPay(@item.Id)"
                                class="bg-green-600 hover:bg-green-700 text-white border border-green-700 px-3 py-1 rounded text-sm">Pagar</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div id="detailsModal"
    class="fixed hidden inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 transition-opacity duration-300 ease-in-out">
    <div class="bg-white p-6 rounded-lg w-full max-w-xl shadow-lg">
        <h3 class="text-lg font-bold mb-4">Detalhes da Dívida</h3>
        <div id="detailsContent" class="text-sm text-gray-700"></div>
        <div class="mt-4 text-right">
            <button onclick="closeModal('detailsModal')"
                class="bg-gray-600 hover:bg-gray-800 text-white px-4 py-2 rounded">
                Fechar
            </button>
        </div>
    </div>
</div>

<div id="payModal" class="fixed hidden inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white p-6 rounded-lg w-full max-w-md">
        <h3 class="text-lg font-bold mb-4">Confirmar Pagamento</h3>
        <form method="post" id="payForm" asp-action="Pagar" asp-controller="Divida">
            <input type="hidden" name="id" id="payId" />
            <p class="text-gray-700 text-sm">Tem certeza que deseja pagar esta dívida?</p>
            <div class="mt-4 text-right">
                <button type="submit"
                    class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">Confirmar</button>
                <button type="button" onclick="closeModal('payModal')"
                    class="ml-2 bg-gray-500 hover:bg-gray-700 text-white px-4 py-2 rounded">Cancelar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function showDetails(id) {
            const dividas = @Html.Raw(ViewBag.DividasJson); // já é um array JSON válido
            console.log(dividas);
            const item = dividas.find(x => x.id === id);

            if (!item) return;

            function formatDate(dateStr) {
                if (!dateStr) return '-';
                const d = new Date(dateStr);
                return d.toLocaleDateString('pt-BR');
            }

            document.getElementById('detailsContent').innerHTML = `
                    <div class="space-y-2">
                        <p><strong>Título:</strong> ${item.titulo}</p>
                        <p><strong>Descrição:</strong> ${item.descricao}</p>
                        <p><strong>Valor:</strong> R$ ${item.valor.toFixed(2)}</p>
                        <p><strong>Empresa:</strong> ${item.empresa?.nome ?? '-'}</p>
                        <p><strong>Status:</strong> ${item.status}</p>
                        <p><strong>Data de Vencimento:</strong> ${formatDate(item.dataVencimento)}</p>
                        <p><strong>Data de Pagamento:</strong> ${formatDate(item.dataPagamento)}</p>
                    </div>
                `;

            document.getElementById('detailsModal').classList.remove('hidden');
        }

        function showPay(id) {
            document.getElementById('payId').value = id;
            document.getElementById('payModal').classList.remove('hidden');
        }

        function closeModal(id) {
            document.getElementById(id).classList.add('hidden');
        }

        document.getElementById('statusFilter').addEventListener('change', filterTable);
        document.getElementById('dateFilter').addEventListener('input', filterTable);

        function filterTable() {
            const status = document.getElementById('statusFilter').value;
            const date = document.getElementById('dateFilter').value;
            const rows = document.querySelectorAll('#dividasBody tr');

            rows.forEach(row => {
                const rowStatus = row.children[5].textContent.trim();
                const rowDate = row.children[3].textContent.trim().split('/').reverse().join('-');

                const statusMatch = !status || rowStatus === status;
                const dateMatch = !date || rowDate === date;

                row.style.display = statusMatch && dateMatch ? '' : 'none';
            });
        }
    </script>
}
