@model WebApplication1.Models.Devedor
@{
    ViewData["Title"] = "Cadastrar Devedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="max-w-lg mx-auto mt-10 bg-white rounded-2xl shadow-blue-glow p-10 animate-fade-in">
    <h2 class="text-3xl font-extrabold mb-8 text-center text-primary-700 tracking-tight animate-pulse">Cadastro de Devedor</h2>
    <form asp-action="Create" method="post" class="space-y-6">
        <div class="grid grid-cols-1 gap-5">
            <div>
                <label asp-for="Name" class="block text-sm font-semibold mb-1 text-primary-700">Nome</label>
                <input asp-for="Name" class="w-full border border-primary-200 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-300 transition" />
                <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="Email" class="block text-sm font-semibold mb-1 text-primary-700">E-mail</label>
                <input asp-for="Email" class="w-full border border-primary-200 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-300 transition" />
                <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="Senha" class="block text-sm font-semibold mb-1 text-primary-700">Senha</label>
                <input asp-for="Senha" type="password" class="w-full border border-primary-200 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-300 transition" />
                <span asp-validation-for="Senha" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="Cpf" class="block text-sm font-semibold mb-1 text-primary-700">CPF</label>
                <input asp-for="Cpf" class="w-full border border-primary-200 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-300 transition" />
                <span asp-validation-for="Cpf" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="Telefone" class="block text-sm font-semibold mb-1 text-primary-700">Telefone</label>
                <input asp-for="Telefone" class="w-full border border-primary-200 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-300 transition" />
                <span asp-validation-for="Telefone" class="text-red-500 text-xs"></span>
            </div>
        </div>
        <button type="submit" class="w-full bg-primary-600 hover:bg-primary-700 text-white font-bold py-3 rounded-lg mt-6 shadow transition-all duration-200 transform hover:scale-105">Cadastrar</button>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
