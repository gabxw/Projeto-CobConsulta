<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="/img/Cob Consulta.png" style="width:90px" alt="" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Cob Consulta</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdownMenuButton" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Serviços
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-controller="Servicos" asp-action="ConsulteDebito">Consulte Débito</a>
                                <a class="dropdown-item" asp-controller="Servicos" asp-action="EmitirSegundaVia">Emitir Segunda Via</a>
                                <a class="dropdown-item" asp-controller="Servicos" asp-action="AnexarDocumentos">Anexar Documentos</a>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Dúvidas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="FaleConosco">Fale conosco</a>
                        </li>

                        @* MENU PARA ADMIN *@
                        @if (Context.Session.GetString("Tipo") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Empresa" asp-action="Index">Empresas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Devedor" asp-action="Index">Devedores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Divida" asp-action="Create">Nova Dívida</a>
                            </li>
                        }

                        @* MENU PARA EMPRESA *@
                        @if (Context.Session.GetString("Tipo") == "Empresa")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Divida" asp-action="Index">Minhas Cobranças</a>
                            </li>
                        }

                        @* MENU PARA DEVEDOR *@
                        @if (Context.Session.GetString("Tipo") == "Devedor")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Divida" asp-action="MinhasDividas">Minhas Dívidas</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("Tipo") == null)
                        {
                            <!-- Botão de Entrar -->
                            <li class="nav-item">
                                <a class="btn btn-primary ms-2" asp-controller="Login" asp-action="Index">Entrar</a>
                            </li>
                        }
                        else
                        {
                            <!-- Exibe nome e botão de Sair -->
                            <li class="nav-item">
                                <span class="nav-link text-dark">
                                    Olá, <strong>@Context.Session.GetString("Nome")</strong>!
                                </span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Login" asp-action="Sair" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger ms-2">Sair</button>
                                </form>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Cob Consulta - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
