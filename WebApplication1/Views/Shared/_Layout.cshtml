@using Microsoft.AspNetCore.Http
@using System.Text.Json
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CobConsulta</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans text-gray-900 min-h-screen flex flex-col">

    <header class="sticky top-0 z-50 bg-white shadow-md">
        <div class="container mx-auto flex flex-col md:flex-row items-center justify-between px-4 py-3">
            <div class="flex items-center space-x-2 mb-2 md:mb-0">
                <img src="/img/cob-logo.png" alt="CobConsulta" />
                <span class="text-xl font-bold text-gray-800">CobConsulta</span>
            </div>
            <nav class="w-full md:w-auto flex justify-center md:justify-center space-x-8">
                @{
                    var activeMenu = Context.Request.Path.Value?.ToLower();
                }
                @if (Context.Session.GetString("Tipo") == "Empresa")
                {
                    <!-- Menu para empresa -->
                    <a asp-controller="Empresa" asp-action="Dashboard" class="font-medium @(activeMenu.Contains("dashboard") ? "text-blue-600" : "text-gray-600") transition hover:text-blue-800">Dashboard</a>
                    <a asp-controller="Empresa" asp-action="Dividas" class="font-medium @(activeMenu.Contains("dividas") ? "text-blue-600" : "text-gray-600") transition hover:text-blue-800">Dívidas</a>
                    <a asp-controller="Empresa" asp-action="CreateDivida" class="font-medium @(activeMenu.Contains("createdivida") ? "text-blue-600" : "text-gray-600") transition hover:text-blue-800">Criar Dívida</a>
                    <a asp-controller="Devedor" asp-action="Create" class="font-medium @(activeMenu.Contains("devedor") ? "text-blue-600" : "text-gray-600") transition hover:text-blue-800">Cadastrar Devedor</a>
                }
                else
                {
                    <!-- Menu para clientes e visitantes -->
                    <a href="#" class="font-medium text-blue-600 transition hover:text-blue-800">Início</a>
                    <a href="#empresa" class="text-gray-600 transition hover:text-blue-600">Para Empresas</a>
                    <a href="#cliente" class="text-gray-600 transition hover:text-blue-600">Para Clientes</a>
                    <a href="#faq" class="text-gray-600 transition hover:text-blue-600">Dúvidas</a>
                    <a href="#contato" class="text-gray-600 transition hover:text-blue-600">Contato</a>
                }
            </nav>
            <div class="flex items-center space-x-4 mt-2 md:mt-0">
                @if (HttpContextAccessor.HttpContext.Session.GetString("Tipo") != null)
                {
                    <form asp-controller="Login" asp-action="Sair" method="post">
                        <button type="submit"
                                class="rounded bg-red-500 px-4 py-2 font-bold text-white transition duration-200 hover:bg-red-700">
                            Sair
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Login" asp-action="Index"
                       class="rounded bg-blue-600 px-4 py-2 font-bold text-white transition duration-200 hover:bg-blue-700">
                        Acessar
                    </a>
                }
                <button class="text-gray-600 md:hidden">
                    <i class="fas fa-bars text-xl"></i>
                </button>
            </div>
        </div>
    </header>

    <main class="container mx-auto px-4 py-6 flex-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
        <div class="container mx-auto px-4">
            <div class="grid md:grid-cols-3 gap-8 mb-8">
                <div>
                    <a href="/" class="flex items-center space-x-2 mb-4 hover:opacity-80 transition">
                        <img src="~/img/cob-logo.png" alt="CobConsulta" />
                        <span class="text-xl font-bold">CobConsulta</span>
                    </a>
                    <p class="text-gray-400 mb-4">Soluções completas e transparentes em gestão de cobranças para empresas e clientes.</p>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-400 hover:text-white transition">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Empresa</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Sobre Nós</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Termos de Uso</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Política de Privacidade</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Trabalhe Conosco</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Links Úteis</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Área do Cliente</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Área da Empresa</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Dúvidas Frequentes</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Central de Ajuda</a></li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-gray-800 pt-8 text-center text-gray-400">
                <p>© 2025 CobConsulta. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>

</html>
