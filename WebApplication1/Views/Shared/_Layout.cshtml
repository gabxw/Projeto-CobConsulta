@using Microsoft.AspNetCore.Http
@using System.Text.Json
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CobConsulta</title>
        <script src="https://cdn.tailwindcss.com"></script>
        <script>
            tailwind.config = {
                theme: {
                    extend: {
                        colors: {
                            primary: {
                                50: '#eaf3fb',
                                100: '#d4e7f7',
                                200: '#a8cff0',
                                300: '#7bb7e9',
                                400: '#4f9fe2',
                                500: '#2387db', // azul principal
                                600: '#1c6bb0',
                                700: '#155085',
                                800: '#0e355a',
                                900: '#071a2f',
                            },
                            accent: '#00b4d8',
                        },
                        fontFamily: {
                            sans: ['Inter', 'ui-sans-serif', 'system-ui'],
                        },
                        boxShadow: {
                            'blue-glow': '0 4px 24px 0 rgba(35,135,219,0.15)',
                        },
                        transitionProperty: {
                            'spacing': 'margin, padding',
                        },
                    },
                },
            }
        </script>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
                <style>
                    .fade-in { animation: fadeIn 1s ease; }
                    .slide-up { animation: slideUp .7s cubic-bezier(.4,0,.2,1); }
                    @@keyframes fadeIn { from { opacity: 0; transform: translateY(16px);} to { opacity: 1; transform: none; } }
                    @@keyframes slideUp { from { opacity: 0; transform: translateY(32px);} to { opacity: 1; transform: none; } }
                </style>
</head>

<body class="bg-primary-50 font-sans text-gray-900 min-h-screen flex flex-col">

    <header class="sticky top-0 z-50 bg-white shadow-md fade-in">
        <div class="max-w-screen-2xl mx-auto flex flex-col md:flex-row items-center justify-between px-4 py-3 w-full">
            <div class="flex items-center space-x-3 mb-2 md:mb-0">
                <img src="/img/cob-logo.png" alt="CobConsulta" class="w-10 h-10 drop-shadow" />
                <span class="text-2xl font-bold text-primary-700 tracking-tight animate-pulse">CobConsulta</span>
            </div>
            <nav class="w-full md:w-auto flex justify-center md:justify-center space-x-8">
                @{
                    var activeMenu = "";
                    if (Context != null && Context.Request.Path.HasValue && Context.Request.Path.Value != null)
                    {
                        activeMenu = Context.Request.Path.Value.ToLower();
                    }
                }
                @if (Context != null && Context.Session != null && Context.Session.GetString("Tipo") == "Empresa")
                {
                    <a asp-controller="Empresa" asp-action="Dashboard" class="font-semibold px-2 py-1 rounded transition-colors duration-200 @(activeMenu.Contains("dashboard") ? "text-primary-600 bg-primary-100" : "text-gray-600 hover:text-primary-600 hover:bg-primary-50")">Dashboard</a>
                    <a asp-controller="Empresa" asp-action="Dividas" class="font-semibold px-2 py-1 rounded transition-colors duration-200 @(activeMenu.Contains("dividas") ? "text-primary-600 bg-primary-100" : "text-gray-600 hover:text-primary-600 hover:bg-primary-50")">Dívidas</a>
                    <a asp-controller="Empresa" asp-action="CreateDivida" class="font-semibold px-2 py-1 rounded transition-colors duration-200 @(activeMenu.Contains("createdivida") ? "text-primary-600 bg-primary-100" : "text-gray-600 hover:text-primary-600 hover:bg-primary-50")">Criar Dívida</a>
                    <a asp-controller="Devedor" asp-action="Create" class="font-semibold px-2 py-1 rounded transition-colors duration-200 @(activeMenu.Contains("devedor") ? "text-primary-600 bg-primary-100" : "text-gray-600 hover:text-primary-600 hover:bg-primary-50")">Cadastrar Devedor</a>
                }
                else
                {
                    <a href="#" class="font-semibold text-primary-600 transition hover:text-primary-700">Início</a>
                    <a href="#empresa" class="text-gray-600 font-semibold transition hover:text-primary-600">Para Empresas</a>
                    <a href="#cliente" class="text-gray-600 font-semibold transition hover:text-primary-600">Para Clientes</a>
                    <a href="#faq" class="text-gray-600 font-semibold transition hover:text-primary-600">Dúvidas</a>
                    <a href="#contato" class="text-gray-600 font-semibold transition hover:text-primary-600">Contato</a>
                }
            </nav>
            <div class="flex items-center space-x-4 mt-2 md:mt-0">
                @if (HttpContextAccessor?.HttpContext?.Session?.GetString("Tipo") != null)
                {
                    <form asp-controller="Login" asp-action="Sair" method="post">
                        <button type="submit"
                                class="rounded bg-red-500 px-4 py-2 font-bold text-white shadow hover:bg-red-700 transition duration-200 focus:ring-2 focus:ring-red-300">
                            Sair
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Login" asp-action="Index"
                       class="rounded bg-primary-600 px-4 py-2 font-bold text-white shadow hover:bg-primary-700 transition duration-200 focus:ring-2 focus:ring-primary-300">
                        Acessar
                    </a>
                }
            </div>
        </div>
    </header>

    <main class="max-w-screen-2xl mx-auto w-full px-2 sm:px-4 py-6 flex-1 slide-up">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-primary-900 text-white py-12 fade-in">
        <div class="max-w-screen-2xl mx-auto px-2 sm:px-4 w-full">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
                <div>
                    <a href="/" class="flex items-center space-x-2 mb-4 hover:opacity-80 transition">
                        <img src="~/img/cob-logo.png" alt="CobConsulta" />
                        <span class="text-xl font-bold">CobConsulta</span>
                    </a>
                    <p class="text-gray-400 mb-4">Soluções completas e transparentes em gestão de cobranças para empresas e clientes.</p>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-400 hover:text-white transition">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-white transition">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Empresa</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Sobre Nós</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Termos de Uso</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Política de Privacidade</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Trabalhe Conosco</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Links Úteis</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Área do Cliente</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Área da Empresa</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Dúvidas Frequentes</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition">Central de Ajuda</a></li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-gray-800 pt-8 text-center text-gray-400">
                <p>© 2025 CobConsulta. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>

</html>
