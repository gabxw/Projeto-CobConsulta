@using Microsoft.AspNetCore.Http
@using System.Text.Json
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CobConsulta</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans text-gray-900">

    <header class="sticky top-0 z-50 bg-white shadow-md">
        <div class="container mx-auto flex items-center justify-between px-4 py-3">
            <div class="flex items-center space-x-2">
                <img src="/img/cob-logo.png" alt="CobConsulta" />
                <span class="text-xl font-bold text-gray-800">CobConsulta</span>
            </div>
            <nav class="hidden space-x-8 md:flex">
                @if (Context.Session.GetString("Tipo") == "Empresa")
                {
                    <!-- Menu para empresa -->
                    <a asp-controller="Empresa" asp-action="Dashboard" class="font-medium text-blue-600 transition hover:text-blue-800">Dashboard</a>
                    <a asp-controller="Empresa" asp-action="Devedores" class="text-gray-600 transition hover:text-blue-600">Devedores</a>
                    <a asp-controller="Empresa" asp-action="Cobrancas" class="text-gray-600 transition hover:text-blue-600">Cobranças</a>
                    <a asp-controller="Empresa" asp-action="Funcionarios" class="text-gray-600 transition hover:text-blue-600">Funcionários</a>
                }
                else
                {
                    <!-- Menu para clientes e visitantes -->
                    <a href="#" class="font-medium text-blue-600 transition hover:text-blue-800">Início</a>
                    <a href="#empresa" class="text-gray-600 transition hover:text-blue-600">Para Empresas</a>
                    <a href="#cliente" class="text-gray-600 transition hover:text-blue-600">Para Clientes</a>
                    <a href="#faq" class="text-gray-600 transition hover:text-blue-600">Dúvidas</a>
                    <a href="#contato" class="text-gray-600 transition hover:text-blue-600">Contato</a>
                }
            </nav>

            <div class="flex items-center space-x-4">
                @if (HttpContextAccessor.HttpContext.Session.GetString("Tipo") != null)
                {
                        <form asp-controller="Login" asp-action="Sair" method="post">
                            <button type="submit"
                                    class="rounded bg-red-500 px-4 py-2 font-bold text-white transition duration-200 hover:bg-red-700">
                                Sair
                            </button>
                        </form>
                }
                else
                {
                        <a asp-controller="Login" asp-action="Index"
                           class="rounded bg-blue-600 px-4 py-2 font-bold text-white transition duration-200 hover:bg-blue-700">
                            Acessar
                        </a>
                }
                <button class="text-gray-600 md:hidden">
                    <i class="fas fa-bars text-xl"></i>
                </button>
            </div>
        </div>
    </header>

    <main class="container mx-auto px-4 py-6">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
</body>

</html>
