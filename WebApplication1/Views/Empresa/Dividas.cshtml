@model List<WebApplication1.Models.Divida>

@{
    ViewData["Title"] = "Minhas Dívidas";
}

<div class="w-full max-w-screen-2xl mx-auto py-8 px-2 sm:px-4">
    <h1 class="text-3xl font-bold mb-8 text-center">Minhas Dívidas</h1>

    <div class="flex flex-col md:flex-row justify-center gap-4 mb-8">
        <a href="/Empresa/CreateDivida" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded-lg shadow flex items-center gap-2">
            <i class="fas fa-plus"></i> Adicionar Nova Dívida
        </a>
        <a href="/Empresa/ImportarDividas" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg shadow flex items-center gap-2">
            <i class="fas fa-file-import"></i> Importar Excel
        </a>
        <button type="button" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-6 rounded-lg shadow flex items-center gap-2" onclick="toggleFiltro()">
            <i class="fas fa-filter"></i> Filtrar
        </button>
    </div>

    <div id="filtroForm" class="mb-8 bg-gray-100 rounded-lg shadow p-6" style="display:none;">
        <form method="get" action="/Empresa/Dividas" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block font-semibold mb-1">Status</label>
                <select name="status" class="form-select w-full">
                    <option value="">Todos</option>
                    <option value="Pendente">Pendente</option>
                    <option value="Vencido">Vencido</option>
                    <option value="Quitado">Quitado</option>
                    <option value="Finalizado">Finalizado</option>
                </select>
            </div>
            <div>
                <label class="block font-semibold mb-1">Devedor</label>
                <input type="text" name="devedor" class="form-input w-full" placeholder="Nome do devedor" />
            </div>
            <div>
                <label class="block font-semibold mb-1">Valor mínimo</label>
                <input type="number" step="0.01" name="valorMin" class="form-input w-full" />
            </div>
            <div>
                <label class="block font-semibold mb-1">Valor máximo</label>
                <input type="number" step="0.01" name="valorMax" class="form-input w-full" />
            </div>
            <div>
                <label class="block font-semibold mb-1">Data inicial</label>
                <input type="date" name="dataInicio" class="form-input w-full" />
            </div>
            <div>
                <label class="block font-semibold mb-1">Data final</label>
                <input type="date" name="dataFim" class="form-input w-full" />
            </div>
            <div class="md:col-span-4 flex justify-end items-end">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg shadow flex items-center gap-2">
                    <i class="fas fa-search"></i> Aplicar Filtro
                </button>
            </div>
        </form>
    </div>

    <div class="overflow-x-auto rounded-xl shadow-lg bg-white">
        <table class="min-w-full w-full text-sm">
            <thead>
                <tr class="bg-gray-100">
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap">Devedor</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap">Título</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap">Descrição</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap">Valor</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap">Vencimento</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap">Pagamento</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap">Criação</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap">Status</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var statusColor = item.Status switch
                    {
                        "Pendente" => "bg-yellow-100 text-yellow-800",
                        "Vencido" => "bg-red-100 text-red-800",
                        "Quitado" => "bg-green-100 text-green-800",
                        "Finalizado" => "bg-blue-100 text-blue-800",
                        _ => "bg-gray-100 text-gray-800"
                    };
                <tr class="border-b hover:bg-gray-50 transition">
                    <td class="px-2 sm:px-4 py-3 whitespace-nowrap">@item.Devedor?.Name</td>
                    <td class="px-2 sm:px-4 py-3 whitespace-nowrap">@item.Titulo</td>
                    <td class="px-2 sm:px-4 py-3 whitespace-nowrap">@item.Descricao</td>
                    <td class="px-2 sm:px-4 py-3 font-semibold whitespace-nowrap">R$ @item.Valor.ToString("N2")</td>
                    <td class="px-2 sm:px-4 py-3 whitespace-nowrap">@item.DataVencimento?.ToString("dd/MM/yyyy")</td>
                    <td class="px-2 sm:px-4 py-3 whitespace-nowrap">@item.DataPagamento?.ToString("dd/MM/yyyy")</td>
                    <td class="px-2 sm:px-4 py-3 whitespace-nowrap">@item.DataCriacao?.ToString("dd/MM/yyyy")</td>
                    <td class="px-2 sm:px-4 py-3 whitespace-nowrap">
                        <span class="px-3 py-1 rounded-full text-xs font-bold @statusColor">@item.Status</span>
                    </td>
                    <td class="px-2 sm:px-4 py-3 flex gap-2 whitespace-nowrap">
                        <a asp-controller="Empresa" asp-action="DetalhesDivida" asp-route-id="@item.Id" class="bg-blue-100 hover:bg-blue-200 text-blue-700 px-3 py-1 rounded flex items-center gap-1 text-sm font-medium shadow">
                            <i class="fas fa-info-circle"></i> Detalhes
                        </a>
                        <a asp-controller="Empresa" asp-action="EditDivida" asp-route-id="@item.Id" class="bg-yellow-100 hover:bg-yellow-200 text-yellow-700 px-3 py-1 rounded flex items-center gap-1 text-sm font-medium shadow">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-controller="Empresa" asp-action="ExcluirDivida" asp-route-id="@item.Id" class="bg-red-100 hover:bg-red-200 text-red-700 px-3 py-1 rounded flex items-center gap-1 text-sm font-medium shadow">
                            <i class="fas fa-trash"></i> Excluir
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function toggleFiltro() {
        var form = document.getElementById('filtroForm');
        form.style.display = form.style.display === 'none' ? '' : 'none';
    }
</script>
