@model List<WebApplication1.Models.Divida>

@{
    ViewData["Title"] = "Minhas Dívidas";
}

<div class="w-full max-w-screen-2xl mx-auto py-8 px-2 sm:px-4">
    <h1 class="text-3xl font-bold mb-8 text-center">Minhas Dívidas</h1>

    <div class="flex flex-col md:flex-row justify-center gap-4 mb-8">
        <a href="/Empresa/CreateDivida" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded-lg shadow flex items-center gap-2">
            <i class="fas fa-plus"></i> Adicionar Nova Dívida
        </a>
        <a href="/Empresa/ImportarDividas" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg shadow flex items-center gap-2">
            <i class="fas fa-file-import"></i> Importar Excel
        </a>
        <button type="button" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-6 rounded-lg shadow flex items-center gap-2" onclick="toggleFiltro()">
            <i class="fas fa-filter"></i> Filtrar
        </button>
    </div>

    <div id="filtroForm" class="mb-8 bg-gray-100 rounded-lg shadow p-6" style="display:none;">
        <form method="get" action="/Empresa/Dividas" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block font-semibold mb-1">Status</label>
                <select name="status" class="form-select w-full">
                    <option value="">Todos</option>
                    <option value="Pendente">Pendente</option>
                    <option value="Vencido">Vencido</option>
                    <option value="Quitado">Quitado</option>
                    <option value="Finalizado">Finalizado</option>
                </select>
            </div>
            <div>
                <label class="block font-semibold mb-1">Devedor</label>
                <input type="text" name="devedor" class="form-input w-full" placeholder="Nome do devedor" />
            </div>
            <div>
                <label class="block font-semibold mb-1">Valor mínimo</label>
                <input type="number" step="0.01" name="valorMin" class="form-input w-full" />
            </div>
            <div>
                <label class="block font-semibold mb-1">Valor máximo</label>
                <input type="number" step="0.01" name="valorMax" class="form-input w-full" />
            </div>
            <div>
                <label class="block font-semibold mb-1">Data inicial</label>
                <input type="date" name="dataInicio" class="form-input w-full" />
            </div>
            <div>
                <label class="block font-semibold mb-1">Data final</label>
                <input type="date" name="dataFim" class="form-input w-full" />
            </div>
            <div class="md:col-span-4 flex justify-end items-end">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg shadow flex items-center gap-2">
                    <i class="fas fa-search"></i> Aplicar Filtro
                </button>
            </div>
        </form>
    </div>

    <div class="rounded-2xl shadow-blue-glow bg-white overflow-x-auto md:overflow-x-visible border border-primary-100">
        <table class="min-w-full w-full text-sm break-words">
            <thead class="sticky top-0 z-10">
                <tr class="bg-primary-100 text-primary-800">
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap font-bold">Devedor</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-normal break-words font-bold">Título</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-normal break-words font-bold">Descrição</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap font-bold">Valor</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap font-bold">Vencimento</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap font-bold">Pagamento</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap font-bold">Criação</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap font-bold">Status</th>
                    <th class="px-2 sm:px-4 py-3 text-left whitespace-nowrap font-bold">Ações</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var rowIndex = 0;
                }
                @foreach (var item in Model)
                {
                    var statusColor = item.Status switch
                    {
                        "Pendente" => "bg-yellow-300 text-yellow-800 border-yellow-300",
                        "Vencido" => "bg-red-300 text-red-800 border-red-300",
                        "Quitado" => "bg-green-300 text-green-800 border-green-300",
                        "Finalizado" => "bg-blue-300 text-blue-800 border-blue-300",
                        _ => "bg-gray-300 text-gray-800 border-gray-300"
                    };
                    var zebra = rowIndex++ % 2 == 0 ? "bg-white" : "bg-primary-50";
                <tr class="border-b border-primary-100 @zebra">
                    <td class="px-2 sm:px-4 py-3 whitespace-nowrap break-words overflow-wrap break-word">@item.Devedor?.Name</td>
                    <td class="px-2 sm:px-4 py-3 whitespace-normal break-words overflow-wrap break-word">@item.Titulo</td>
                    <td class="px-2 sm:px-4 py-3 whitespace-normal break-words overflow-wrap break-word">@item.Descricao</td>
                    <td class="px-2 sm:px-4 py-3 font-semibold whitespace-nowrap">R$ @item.Valor.ToString("N2")</td>
                    <td class="px-2 sm:px-4 py-3 whitespace-nowrap">@item.DataVencimento?.ToString("dd/MM/yyyy")</td>
                    <td class="px-2 sm:px-4 py-3 whitespace-nowrap">@item.DataPagamento?.ToString("dd/MM/yyyy")</td>
                    <td class="px-2 sm:px-4 py-3 whitespace-nowrap">@item.DataCriacao?.ToString("dd/MM/yyyy")</td>
                    <td class="px-2 sm:px-4 py-3 whitespace-nowrap">
                        <span class="px-3 py-1 rounded-full text-xs font-bold border @statusColor shadow">@item.Status</span>
                    </td>
                    <td class="px-2 sm:px-4 py-3 flex flex-wrap gap-2 whitespace-nowrap">
                        <a asp-controller="Empresa" asp-action="DetalhesDivida" asp-route-id="@item.Id" class="bg-blue-300 hover:bg-blue-200 text-blue-700 px-3 py-1 rounded flex items-center gap-1 text-sm font-medium shadow transition-all duration-150">
                            <i class="fas fa-info-circle"></i> <span class="hidden sm:inline">Detalhes</span>
                        </a>
                        <a asp-controller="Empresa" asp-action="EditDivida" asp-route-id="@item.Id" class="bg-yellow-300 hover:bg-yellow-200 text-yellow-700 px-3 py-1 rounded flex items-center gap-1 text-sm font-medium shadow transition-all duration-150">
                            <i class="fas fa-edit"></i> <span class="hidden sm:inline">Editar</span>
                        </a>
                        <a asp-controller="Empresa" asp-action="ExcluirDivida" asp-route-id="@item.Id" class="bg-red-300 hover:bg-red-200 text-red-700 px-3 py-1 rounded flex items-center gap-1 text-sm font-medium shadow transition-all duration-150">
                            <i class="fas fa-trash"></i> <span class="hidden sm:inline">Excluir</span>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function toggleFiltro() {
        var form = document.getElementById('filtroForm');
        form.style.display = form.style.display === 'none' ? '' : 'none';
    }
</script>
