@{
    ViewData["Title"] = "Dashboard da Empresa";
    Layout = null; // para usar Tailwind direto (ou use seu layout se já estiver com Tailwind nele)
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <title>Painel da Empresa</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-white shadow-md">
            <div class="p-4 text-lg font-bold border-b">Sistema Cobrança</div>
            <nav class="p-4 space-y-2">
                <a asp-action="Dashboard" class="block px-4 py-2 rounded hover:bg-gray-100">📊 Dashboard</a>
                <a asp-action="Devedores" class="block px-4 py-2 rounded hover:bg-gray-100">📋 Devedores</a>
                <a asp-action="Cobrancas" class="block px-4 py-2 rounded hover:bg-gray-100">💰 Cobranças</a>
                <a asp-action="Funcionarios" class="block px-4 py-2 rounded hover:bg-gray-100">👨‍💼 Funcionários</a>
                <a asp-controller="Login" asp-action="Sair" class="block px-4 py-2 rounded hover:bg-red-100 text-red-600">🚪 Sair</a>
            </nav>
        </aside>

        <!-- Main content -->
        <main class="flex-1 p-6">
            <h1 class="text-2xl font-semibold mb-6">Dashboard da Empresa</h1>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="bg-white shadow rounded p-4">
                    <h2 class="text-sm text-gray-500">Devedores</h2>
                    <p class="text-2xl font-bold">12</p>
                </div>
                <div class="bg-white shadow rounded p-4">
                    <h2 class="text-sm text-gray-500">Cobranças Pendentes</h2>
                    <p class="text-2xl font-bold">R$ 3.250,00</p>
                </div>
                <div class="bg-white shadow rounded p-4">
                    <h2 class="text-sm text-gray-500">Cobranças Pagas</h2>
                    <p class="text-2xl font-bold">R$ 1.750,00</p>
                </div>
            </div>
        </main>
    </div>

</body>
</html>
