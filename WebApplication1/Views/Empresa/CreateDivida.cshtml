@model WebApplication1.Models.Divida

@{
    ViewData["Title"] = "Nova Dívida";
}

<div class="max-w-2xl mx-auto py-10 animate-fade-in">
    <h1 class="text-3xl font-extrabold mb-10 text-center text-primary-700 tracking-tight animate-pulse">Nova Dívida</h1>
    <form asp-action="CreateDivida" method="post" class="space-y-8 bg-white p-10 rounded-2xl shadow-blue-glow">
        <div class="grid grid-cols-1 gap-6">
            <div>
                <label asp-for="Titulo" class="block font-semibold text-primary-700 mb-1">Título</label>
                <input asp-for="Titulo" class="form-input mt-1 block w-full rounded-lg border-primary-200 shadow focus:ring-primary-500 focus:border-primary-500 transition" />
                <span asp-validation-for="Titulo" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="Descricao" class="block font-semibold text-primary-700 mb-1">Descrição</label>
                <textarea asp-for="Descricao" rows="3" class="form-textarea mt-1 block w-full rounded-lg border-primary-200 shadow focus:ring-primary-500 focus:border-primary-500 transition"></textarea>
                <span asp-validation-for="Descricao" class="text-red-600 text-sm"></span>
            </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
                <label asp-for="Valor" class="block font-semibold text-primary-700 mb-1">Valor</label>
                <input asp-for="Valor" type="number" step="0.01" class="form-input mt-1 block w-full rounded-lg border-primary-200 shadow focus:ring-primary-500 focus:border-primary-500 transition" />
                <span asp-validation-for="Valor" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="DataVencimento" class="block font-semibold text-primary-700 mb-1">Data de Vencimento</label>
                <input asp-for="DataVencimento" type="date" class="form-input mt-1 block w-full rounded-lg border-primary-200 shadow focus:ring-primary-500 focus:border-primary-500 transition" />
                <span asp-validation-for="DataVencimento" class="text-red-600 text-sm"></span>
            </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
                <label asp-for="DataPagamento" class="block font-semibold text-primary-700 mb-1">Data de Pagamento</label>
                <input asp-for="DataPagamento" type="date" class="form-input mt-1 block w-full rounded-lg border-primary-200 shadow focus:ring-primary-500 focus:border-primary-500 transition" />
                <span asp-validation-for="DataPagamento" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="DevedorID" class="block font-semibold text-primary-700 mb-1">Devedor</label>
                <select asp-for="DevedorID" asp-items="ViewBag.Devedores" class="form-select mt-1 block w-full rounded-lg border-primary-200 shadow focus:ring-primary-500 focus:border-primary-500 transition">
                    <option value="">Selecione um devedor</option>
                </select>
                <span asp-validation-for="DevedorID" class="text-red-600 text-sm"></span>
            </div>
        </div>
        <div class="flex justify-center gap-4 pt-6">
            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-lg shadow transition-all duration-200 transform hover:scale-105 flex items-center gap-2">
                <i class="fas fa-check"></i> Criar Dívida
            </button>
            <a href="/Empresa/Dividas" class="bg-gray-100 hover:bg-gray-200 text-gray-700 font-bold py-3 px-8 rounded-lg shadow flex items-center gap-2 transition-all duration-200 transform hover:scale-105">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
