@model WebApplication1.Models.Divida

@{
    ViewData["Title"] = "Nova Dívida";
}

<div class="max-w-2xl mx-auto py-8">
    <h1 class="text-3xl font-bold mb-8 text-center">Nova Dívida</h1>

    <form asp-action="CreateDivida" method="post" class="space-y-6 bg-white p-8 rounded-xl shadow-lg">
        <div>
            <label asp-for="Titulo" class="block font-semibold text-gray-700 mb-1">Título</label>
            <input asp-for="Titulo" class="form-input mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Titulo" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Descricao" class="block font-semibold text-gray-700 mb-1">Descrição</label>
            <textarea asp-for="Descricao" rows="3" class="form-textarea mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
            <span asp-validation-for="Descricao" class="text-red-600 text-sm"></span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="Valor" class="block font-semibold text-gray-700 mb-1">Valor</label>
                <input asp-for="Valor" type="number" step="0.01" class="form-input mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Valor" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="DataVencimento" class="block font-semibold text-gray-700 mb-1">Data de Vencimento</label>
                <input asp-for="DataVencimento" type="date" class="form-input mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="DataVencimento" class="text-red-600 text-sm"></span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="DataPagamento" class="block font-semibold text-gray-700 mb-1">Data de Pagamento</label>
                <input asp-for="DataPagamento" type="date" class="form-input mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="DataPagamento" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="DevedorID" class="block font-semibold text-gray-700 mb-1">Devedor</label>
                <select asp-for="DevedorID" asp-items="ViewBag.Devedores" class="form-select mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Selecione um devedor</option>
                </select>
                <span asp-validation-for="DevedorID" class="text-red-600 text-sm"></span>
            </div>
        </div>

        <div class="flex justify-center gap-4 pt-4">
            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded-lg shadow flex items-center gap-2">
                <i class="fas fa-check"></i> Criar Dívida
            </button>
            <a href="/Empresa/Dividas" class="bg-gray-100 hover:bg-gray-200 text-gray-700 font-bold py-2 px-6 rounded-lg shadow flex items-center gap-2">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
