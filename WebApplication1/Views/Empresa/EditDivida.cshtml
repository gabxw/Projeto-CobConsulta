@model WebApplication1.Models.Divida

@{
    ViewData["Title"] = "Editar Dívida";
}

<h1 class="text-2xl font-bold mb-6">Editar Dívida</h1>

<form asp-action="EditDivida" method="post" class="space-y-6 bg-white p-6 rounded shadow-md">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Titulo" class="block font-medium text-gray-700"></label>
        <input asp-for="Titulo" class="form-input mt-1 block w-full rounded border-gray-300 shadow-sm" />
        <span asp-validation-for="Titulo" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Descricao" class="block font-medium text-gray-700"></label>
        <textarea asp-for="Descricao" rows="3" class="form-textarea mt-1 block w-full rounded border-gray-300 shadow-sm"></textarea>
        <span asp-validation-for="Descricao" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Valor" class="block font-medium text-gray-700"></label>
        <input asp-for="Valor" type="number" step="0.01" class="form-input mt-1 block w-full rounded border-gray-300 shadow-sm" />
        <span asp-validation-for="Valor" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="DataVencimento" class="block font-medium text-gray-700"></label>
        <input asp-for="DataVencimento" type="date" class="form-input mt-1 block w-full rounded border-gray-300 shadow-sm" />
        <span asp-validation-for="DataVencimento" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="DataPagamento" class="block font-medium text-gray-700"></label>
        <input asp-for="DataPagamento" type="date" class="form-input mt-1 block w-full rounded border-gray-300 shadow-sm" />
        <span asp-validation-for="DataPagamento" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Status" class="block font-medium text-gray-700"></label>
        <select asp-for="Status" class="form-select mt-1 block w-full rounded border-gray-300 shadow-sm">
            <option value="Pendente">Pendente</option>
            <option value="Vencido">Vencido</option>
            <option value="Quitado">Quitado</option>
            <option value="Finalizado">Finalizado</option>
        </select>
        <span asp-validation-for="Status" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="DevedorID" class="block font-medium text-gray-700">Devedor</label>
        <select asp-for="DevedorID" asp-items="ViewBag.Devedores" class="form-select mt-1 block w-full rounded border-gray-300 shadow-sm">
            <option value="">Selecione um devedor</option>
        </select>
        <span asp-validation-for="DevedorID" class="text-red-600 text-sm"></span>
    </div>

    <button type="submit" class="bg-yellow-600 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded">
        Salvar Alterações
    </button>
    <a href="/Empresa/Dividas" class="ml-4 text-gray-600 hover:underline">Cancelar</a>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
